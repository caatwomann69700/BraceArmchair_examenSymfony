{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Register</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'row g-3'}}) }}

        <div class="col-md-6">
            <label for="firstName" class="form-label">First Name</label>
            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="lastName" class="form-label">Last Name</label>
            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="birthDate" class="form-label">Date of Birth</label>
            {{ form_widget(registrationForm.birthDate, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="address" class="form-label">Address</label>
            {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="city" class="form-label">City</label>
            {{ form_widget(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="country" class="form-label">Country</label>
            {{ form_widget(registrationForm.country, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="gender" class="form-label">Gender</label>
            {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="plainPassword" class="form-label">Password</label>
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-md-6">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
