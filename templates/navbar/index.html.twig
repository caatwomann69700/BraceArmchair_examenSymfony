{# JavaScript pour effet de texte avec écriture et changement #}
<script>
    document.addEventListener("DOMContentLoaded", function() {
      const texts = [
    "Welcome to BRACE ARMCHAIR.",
    "Explore our new PLUMP collection: A blend of softness and modern design, perfect for any living space.",
    "Sign up today and enjoy 10% off your first purchase as a valued member!"
];
        let textIndex = 0;  // Index de la phrase actuelle
        let charIndex = 0;  // Index du caractère actuel
        const typingSpeed = 100;  // Vitesse d'écriture (en ms)
        const displayDuration = 2000;  // Durée d'affichage avant de changer de phrase
        const typewriterElement = document.getElementById("typewriter-text");

        function typeWriter() {
            if (charIndex < texts[textIndex].length) {
                // Ajoute le caractère suivant
                typewriterElement.innerHTML += texts[textIndex].charAt(charIndex);
                charIndex++;
                setTimeout(typeWriter, typingSpeed);  // Continue l'écriture
            } else {
                // Une fois la phrase complètement écrite, attend un moment puis efface
                setTimeout(() => {
                    eraseText();  // Effacer le texte après l'écriture
                }, displayDuration);
            }
        }

        function eraseText() {
            if (charIndex > 0) {
                // Efface les caractères un à un
                typewriterElement.innerHTML = texts[textIndex].substring(0, charIndex - 1);
                charIndex--;
                setTimeout(eraseText, typingSpeed / 2);  // Accélère l'effacement
            } else {
                // Passe à la phrase suivante
                textIndex = (textIndex + 1) % texts.length;  // Répète les phrases en boucle
                setTimeout(typeWriter, typingSpeed);
            }
        }

        // Démarre l'écriture
        typeWriter();
    });
</script>


