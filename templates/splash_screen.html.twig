<!-- templates/splash_screen.html.twig -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Splash Screen</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #001f3f; /* Couleur de fond du splash screen */
        }
        .logo {
            width: 200px;
            height: 200px;
            animation: fadeout 2s ease-in-out forwards;
        }
        @keyframes fadeout {
            0% { opacity: 1; }
            100% { opacity: 0; }
        }
    </style>
</head>
<body>
    <div class="logo">
        <img src="/path-to-your-logo.png" alt="Logo" />
    </div>

    <script>
    setTimeout(function() {
        window.location.href = '{{ path('app_home') }}'; // Redirection vers la page principale
    }, 3000); // L'animation dure 3 secondes
</script>

</body>
</html>
